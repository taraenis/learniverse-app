{
  "name": "learniverse-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm run lint && pnpm run format:check && pnpm run type-check && pnpm run test && pnpm run build-storybook && vite build",
    "preview": "vite preview",
    "lint": "eslint src --fix",
    "format:check": "prettier --check \"src/**/*.{vue,ts,js,json,css,scss}\"",
    "format:fix": "prettier --write \"src/**/*.{vue,ts,js,json,css,scss}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "vue-tsc --noEmit",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=10.28.0"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx}": "eslint --fix",
    "*.{vue,ts,js,json,css,scss}": "prettier --write"
  },
  "dependencies": {
    "pinia": "^3.0.4",
    "vue": "^3.5.24",
    "vue-i18n": "^11.2.8",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^5.0.0",
    "@intlify/unplugin-vue-i18n": "^11.0.3",
    "@storybook/addon-a11y": "^10.2.0",
    "@storybook/addon-docs": "^10.2.0",
    "@storybook/addon-vitest": "^10.2.0",
    "@storybook/vue3-vite": "^10.2.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/browser-playwright": "4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "4.0.17",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-storybook": "^10.2.0",
    "eslint-plugin-vue": "^10.7.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.58.0",
    "sass": "^1.97.2",
    "storybook": "^10.2.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-svgo": "^2.0.0",
    "vitest": "^4.0.17",
    "vue-tsc": "^3.1.4"
  }
}
